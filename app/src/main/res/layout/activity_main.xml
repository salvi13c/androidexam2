<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"

    >

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:text="TextView"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="#18FFFF"
            android:onClick="button_delete"
            android:shadowColor="#004E1313"
            android:text="C"
            android:textColorHint="#00832828"
            android:textSize="20sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="#18FFFF"
            android:onClick="button_div"
            android:text="/"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="#18FFFF"
            android:onClick="button_mul"
            android:text="X "
            android:textSize="20sp" />

        <Button
            android:id="@+id/res"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#18FFFF"
            android:onClick="button_sub"
            android:text="-"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="455dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_n7"
                        android:layout_width="match_parent"
                        android:layout_height="114dp"
                        android:background="#EEFF41"
                        android:onClick="button_n7"
                        android:text="7"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_n8"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:background="#EEFF41"
                        android:onClick="button_n8"
                        android:text="8"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_n9"
                        android:layout_width="101dp"
                        android:layout_height="match_parent"
                        android:background="#EEFF41"
                        android:onClick="button_n9"
                        android:text="9"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_n4"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:background="#EEFF41"
                        android:onClick="button_n4"
                        android:text="4"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_n5"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:background="#EEFF41"
                        android:onClick="button_n5"
                        android:text="5"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_n6"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:background="#EEFF41"
                        android:onClick="button_n6"
                        android:text="6"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_n1"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:background="#EEFF41"
                        android:onClick="button_n1"
                        android:text="1"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_n2"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:background="#EEFF41"
                        android:onClick="button_n2"
                        android:text="2"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_n3"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:background="#EEFF41"
                        android:onClick="button_n3"
                        android:text="3"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_n0"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:layout_weight="1"
                        android:background="#EEFF41"
                        android:onClick="button_n0"
                        android:text="0"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_point"
                        android:layout_width="wrap_content"
                        android:layout_height="109dp"
                        android:layout_weight="1"
                        android:background="#EEFF41"
                        android:onClick="button_point"
                        android:text="."
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#18FFFF"
                    android:onClick="button_add"
                    android:text="+"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button_result"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1"
                    android:background="#18FFFF"
                    android:onClick="button_result"
                    android:text="="
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>